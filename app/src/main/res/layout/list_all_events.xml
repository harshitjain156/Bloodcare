<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/label"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:clickable="true"
    android:focusable="true"
    android:foreground="@drawable/card_effect"
    app:cardElevation="60dp"
    app:cardCornerRadius="15dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:background="@color/white"
        android:backgroundTint="@color/mapboxGrayLight">

        <TextView
            android:id="@+id/showBloodBankName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:fontFamily="@font/baumans"
            android:text="@string/blood_bank_name"
            android:textStyle="bold"
            android:textColor="#FF0000"
            android:textSize="16sp"
            app:drawableLeftCompat="@drawable/bloodgroup"
            app:drawableTint="#FF0000"
            android:drawablePadding="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/showEventName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Event Name"
            android:textColor="#3F51B5"
            android:textSize="15sp"
            android:textStyle="bold"
            app:drawableLeftCompat="@drawable/ic_event"
            android:drawablePadding="5dp"
            app:drawableTint="#3F51B5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/showBloodBankName" />

        <TextView
            android:id="@+id/showEventStartDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Event Start Date"
            android:textColor="#3F51B5"
            android:textSize="15sp"
            android:textStyle="bold"
            app:drawableLeftCompat="@drawable/ic_baseline_calendar_today_24"
            android:drawablePadding="5dp"
            app:drawableTint="#3F51B5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/showEventDescription"/>

<!--        <TextView-->
<!--            android:id="@+id/showEventEndDate"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_margin="5dp"-->
<!--            android:text="Event End Date"-->
<!--            android:textColor="#3F51B5"-->
<!--            android:textSize="15sp"-->
<!--            app:drawableLeftCompat="@drawable/enddate"-->
<!--            android:drawablePadding="5dp"-->
<!--            app:drawableTint="#3F51B5"-->
<!--            app:layout_constraintStart_toStartOf="parent"-->
<!--            app:layout_constraintTop_toBottomOf="@+id/showEventStartDate" />-->

        <TextView
            android:id="@+id/showEventDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:drawablePadding="5dp"
            android:text="Event Description"
            android:textColor="#3F51B5"
            android:textSize="15sp"
            android:textStyle="bold"
            app:drawableLeftCompat="@drawable/ic_note"
            app:drawableTint="#3F51B5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/showEventName" />

        <TextView
            android:id="@+id/showEventDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Event Duration"
            android:textColor="#3F51B5"
            android:textSize="15sp"
            android:textStyle="bold"
            app:drawableLeftCompat="@drawable/ic_duration"
            android:drawablePadding="5dp"
            app:drawableTint="#3F51B5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/showEventStartDate" />

        <TextView
            android:id="@+id/showEventVenue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Event Venue"
            android:textColor="#3F51B5"
            android:textSize="15sp"
            android:textStyle="bold"
            app:drawableLeftCompat="@drawable/ic_pin"
            android:drawablePadding="5dp"
            app:drawableTint="#3F51B5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/showEventDuration" />

        <TextView
            android:id="@+id/showEventStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="48dp"
            android:layout_marginRight="48dp"
            app:drawableLeftCompat="@drawable/ic_flag"
            android:drawablePadding="5dp"
            app:drawableTint="#3F51B5"
            android:text="Status"
            android:textColor="#3F51B5"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>